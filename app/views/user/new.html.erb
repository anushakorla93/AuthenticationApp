<div class="row d-flex justify-content-center align-items-center mt-5">
    <div class="col-sm-6">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title"> Sign Up </h5>
                <p class="card-text">
                    <%= form_for :user, url: '/users' do |form| %>
                        <div class="form-group row">
                            <%= form.label :first_name, :class=> "col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                                <%= form.text_field :first_name, :class =>"form-control" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= form.label :last_name, :class=> "col-sm-2 col-form-label"  %>
                            <div class="col-sm-10">
                                <%= form.text_field :last_name, :class =>"form-control" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= form.label :user_name, :class=> "col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                                <%= form.text_field :user_name, :class =>"form-control" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= form.label :email, :class=> "col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                                <%= form.text_field :email, :class =>"form-control" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= form.label :password, :class=> "col-sm-2 col-form-label" %>
                            <div class="col-sm-10">
                                <%= form.password_field :password, :class =>"form-control" %>
                            </div>
                        </div>
                        
                        <%=  submit_tag("Create Account", :class=> "btn btn-primary") %>
                        <%= link_to 'Back', :back, :class=> "btn btn-primary" %>
                    <% end %>
                </p>
            </div>
        </div>
    </div>
</div>            